<form method="post" action="/adddevice">
  <div class="form-group">
    <label>Unique id</label>
    <input type="text" name="id" class="form-control" value="{{device.id}}" required>
  </div>

  <div class="form-group">
    <label>Name</label>
    <input type="text" name="name" class="form-control" value="{{device.name}}" required>
  </div>

  <div class="form-group">
    <label>Where</label>
    <input type="text" name="place" class="form-control" value="{{device.place}}" required>
  </div>

  <div class="form-group">
    <label>IP</label>
    <input type='text' class="form-control" name='ip' value="{{device.ip}}" required pattern="^([0-9]{1,3}\.){3}[0-9]{1,3}$">
  </div>

  <div class="form-group">
    <label>Port</label>
    <input type='number' class="form-control" name='port' value="{{device.port}}" required>
  </div>
  <button type="submit" class="btn btn-default" name="button" value="{{goal}}">{{goalname}}</button>
</form>
